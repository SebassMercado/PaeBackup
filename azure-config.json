{
  "name": "PaeBackup Azure Configuration",
  "description": "Configuraci√≥n de ejemplo para Azure App Service / Sample configuration for Azure App Service",
  "appSettings": {
    "MYSQL_HOST": "${MYSQL_SERVER_NAME}.mysql.database.azure.com",
    "MYSQL_PORT": "3306",
    "MYSQL_DATABASE": "${DATABASE_NAME}",
    "MYSQL_USER": "${ADMIN_USER}@${MYSQL_SERVER_NAME}",
    "MYSQL_PASSWORD": "${ADMIN_PASSWORD}",
    "JAVA_OPTS": "-Dfile.encoding=UTF-8 -Djava.net.preferIPv4Stack=true",
    "WEBSITE_TIME_ZONE": "America/Bogota",
    "WEBSITES_ENABLE_APP_SERVICE_STORAGE": "false"
  },
  "connectionStrings": {
    "defaultConnection": {
      "value": "jdbc:mysql://${MYSQL_SERVER_NAME}.mysql.database.azure.com:3306/${DATABASE_NAME}?useSSL=true&requireSSL=false&serverTimezone=America/Bogota",
      "type": "MySql"
    }
  },
  "instructions": {
    "es": "Reemplaza los valores ${VARIABLE} con tus valores reales de Azure",
    "en": "Replace ${VARIABLE} values with your actual Azure values"
  },
  "example": {
    "MYSQL_SERVER_NAME": "pae-mysql-server",
    "DATABASE_NAME": "paedb",
    "ADMIN_USER": "adminpae",
    "ADMIN_PASSWORD": "YourSecurePassword123!"
  }
}
