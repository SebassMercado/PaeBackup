<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="ReporteInsumos" language="groovy" pageWidth="842" pageHeight="595"
              orientation="Landscape" columnWidth="802" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Estilos -->
    <style name="Title" forecolor="#FFFFFF" fontName="Times New Roman" fontSize="50" isBold="false"/>
    <style name="SubTitle" forecolor="#CCCCCC" fontName="Times New Roman" fontSize="18" isBold="false"/>
    <style name="Column header" forecolor="#666666" fontName="Times New Roman" fontSize="14" isBold="true"/>
    <style name="Detail" mode="Transparent" fontName="Times New Roman"/>
    <style name="Row" mode="Transparent" fontName="Times New Roman">
        <conditionalStyle>
            <conditionExpression><![CDATA[$V{REPORT_COUNT}%2 == 0]]></conditionExpression>
            <style mode="Opaque" backcolor="#F0EFEF"/>
        </conditionalStyle>
    </style>

    <!-- Consulta SQL -->
    <queryString language="SQL"><![CDATA[SELECT nombre, cantidad, unidad_medida, stock_min FROM insumos]]></queryString>

    <!-- Campos -->
    <field name="nombre" class="java.lang.String"/>
    <field name="cantidad" class="java.math.BigDecimal"/>
    <field name="unidad_medida" class="java.lang.String"/>
    <field name="stock_min" class="java.math.BigDecimal"/>

    <!-- Background -->
    <background>
        <band splitType="Stretch"/>
    </background>

    <!-- Título -->
    <title>
        <band height="102" splitType="Stretch">
            <frame>
                <reportElement mode="Opaque" x="0" y="0" width="802" height="66" backcolor="#000000"/>
                <staticText>
                    <reportElement style="Title" x="0" y="0" width="370" height="66"/>
                    <textElement verticalAlignment="Bottom"/>
                    <text><![CDATA[Pae]]></text>
                </staticText>
                <staticText>
                    <reportElement style="SubTitle" x="370" y="37" width="316" height="29"/>
                    <textElement textAlignment="Right"/>
                    <text><![CDATA[Reporte de Insumos]]></text>
                </staticText>
            </frame>
            <frame>
                <reportElement mode="Opaque" x="0" y="66" width="802" height="32" backcolor="#CC0000"/>
                <textField pattern="EEEEE dd MMMMM yyyy">
                    <reportElement x="653" y="12" width="144" height="20" forecolor="#FFFFFF"/>
                    <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
                </textField>
            </frame>
        </band>
    </title>

    <!-- Column Headers -->
    <columnHeader>
        <band height="18" splitType="Stretch">
            <staticText>
                <reportElement style="Column header" x="0" y="0" width="200" height="18"/>
                <text><![CDATA[Nombre]]></text>
            </staticText>
            <staticText>
                <reportElement style="Column header" x="200" y="0" width="100" height="18"/>
                <text><![CDATA[Cantidad]]></text>
            </staticText>
            <staticText>
                <reportElement style="Column header" x="300" y="0" width="100" height="18"/>
                <text><![CDATA[Unidad]]></text>
            </staticText>
            <staticText>
                <reportElement style="Column header" x="400" y="0" width="100" height="18"/>
                <text><![CDATA[Stock Mínimo]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail -->
    <detail>
        <band height="18" splitType="Stretch">
            <frame>
                <reportElement style="Row" mode="Opaque" x="0" y="0" width="802" height="18"/>
                <textField>
                    <reportElement style="Detail" x="0" y="0" width="200" height="18"/>
                    <textFieldExpression><![CDATA[$F{nombre}]]></textFieldExpression>
                </textField>
                <textField>
                    <reportElement style="Detail" x="200" y="0" width="100" height="18"/>
                    <textFieldExpression><![CDATA[$F{cantidad}]]></textFieldExpression>
                </textField>
                <textField>
                    <reportElement style="Detail" x="300" y="0" width="100" height="18"/>
                    <textFieldExpression><![CDATA[$F{unidad_medida}]]></textFieldExpression>
                </textField>
                <textField>
                    <reportElement style="Detail" x="400" y="0" width="100" height="18"/>
                    <textFieldExpression><![CDATA[$F{stock_min}]]></textFieldExpression>
                </textField>
            </frame>
        </band>
    </detail>

    <!-- Page Footer -->
    <pageFooter>
        <band height="25">
            <frame>
                <reportElement mode="Opaque" x="0" y="0" width="802" height="25" backcolor="#000000"/>
                <textField evaluationTime="Report">
                    <reportElement x="757" y="3" width="40" height="20" forecolor="#FFFFFF"/>
                    <textFieldExpression><![CDATA[" " + $V{PAGE_NUMBER}]]></textFieldExpression>
                </textField>
                <textField>
                    <reportElement x="697" y="3" width="60" height="20" forecolor="#FFFFFF"/>
                    <textFieldExpression><![CDATA["Página "+$V{PAGE_NUMBER}+" de"]]></textFieldExpression>
                </textField>
                <textField pattern="EEEEE dd MMMMM yyyy">
                    <reportElement x="2" y="3" width="197" height="20" forecolor="#FFFFFF"/>
                    <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
                </textField>
            </frame>
        </band>
    </pageFooter>

</jasperReport>
